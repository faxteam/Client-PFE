                                          <Insets bottom="10.0" left="10.0" right="10.0" top="25.0" />
                                       </VBox.margin>
                                    </JFXTextField>
                                    <JFXTextField fx:id="smtpPort" editable="false" labelFloat="true" promptText="SMTP Port" text="587">
